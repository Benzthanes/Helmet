<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_8dp"
        android:layout_marginTop="@dimen/default_6dp"
        android:layout_marginEnd="@dimen/default_8dp"
        android:layout_marginBottom="@dimen/default_6dp"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardCornerRadius="@dimen/default_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/default_60dp"
                android:layout_height="@dimen/default_60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHelmetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_darker"
                android:textSize="@dimen/default_text_size_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                app:layout_constraintTop_toTopOf="@+id/ivIcon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_4dp"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvHelmetName"
                app:layout_constraintTop_toBottomOf="@+id/tvHelmetName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_4dp"
                android:text="@string/size"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvPrice"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizeS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_4dp"
                android:layout_marginTop="@dimen/default_2dp"
                android:textColor="@color/red"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvSize"
                app:layout_constraintStart_toEndOf="@+id/tvSize"
                app:layout_constraintTop_toTopOf="@+id/tvSize" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizeM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_4dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvSizeS"
                app:layout_constraintStart_toEndOf="@+id/tvSizeS"
                app:layout_constraintTop_toTopOf="@+id/tvSizeS" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizeL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_4dp"
                android:textColor="@color/green"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvSizeM"
                app:layout_constraintStart_toEndOf="@+id/tvSizeM"
                app:layout_constraintTop_toTopOf="@+id/tvSizeM" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizeXL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_4dp"
                android:textColor="@color/blue_sky"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvSizeL"
                app:layout_constraintStart_toEndOf="@+id/tvSizeL"
                app:layout_constraintTop_toTopOf="@+id/tvSizeL" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizeXXL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_4dp"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/default_text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvSizeXL"
                app:layout_constraintStart_toEndOf="@+id/tvSizeXL"
                app:layout_constraintTop_toTopOf="@+id/tvSizeXL" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>